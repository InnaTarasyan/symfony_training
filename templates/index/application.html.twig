                                    <img src="{{ asset('images/apps/') }}{{ application.img}}" title="{{ application.name }}"  class="responsive"  style="max-width: 300px;"/>
                                </div>
                                <div class="col-lg-6" style="text-align: left">
                                   {{ application.description }}
                                </div>
                            </div>
                            <br/>
                        </div>
                        <br/>
                        <div>

                        </div>
                    </div>
                    <br/>

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

